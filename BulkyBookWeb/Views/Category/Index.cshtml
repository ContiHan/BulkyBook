@model IEnumerable<Category>
@{
	ViewData["Title"] = "Index";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">
				Category list
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-square"></i> &nbsp; Create new category
			</a>
		</div>
	</div>
</div>

<br />

<form asp-action="Index" method="get">
	<div class="p-2">
		Find by Name or Display Order: &nbsp;
		<input type="text" style="width:150px" name="searchString" value="@ViewData["CurrentFilter"]" /> &nbsp;
		<button type="submit" class="btn btn-primary" style="width:150px">
			Search
		</button>
		<a asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to Full List
		</a>
	</div>
</form>

<div class="p-2">
	<a asp-action="FillTable" class="btn btn-primary" style="width:150px">
		Fill Table
	</a>
	<a asp-action="WipeTableOptimized" class="btn btn-danger" style="width:150px">
		Wipe Table
	</a>
</div>

<table class="table table-bordered table-striped" style="width:100%">
	<thead>
		<tr>
			<th>
				<a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Name)</a>
			</th>
			<th>
				<a asp-action="Index" asp-route-sortOrder="@ViewData["OrderSortParm"]">@Html.DisplayNameFor(model => model.DisplayOrder)</a>
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model)
		{
			<tr class="align-middle">
				<td width="50%">
					@obj.Name
				</td>
				<td width="30%">
					@obj.DisplayOrder
				</td>
				<td>
					<div class="btn-group w-100" role="group">
						<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-primary mx-2">
							<i class="bi bi-pencil-square"></i> Edit
						</a>
						<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger mx-2">
							<i class="bi bi-x-square"></i> Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>

