@model IEnumerable<BulkyBookWeb.Models.Person>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="GetUpToDateData">Get up to date data</a>
</p>

<form asp-action="Index" method="get">
	<div class="p-2">
		Find: &nbsp;
		<input type="text" style="width:150px" name="searchString" value="@ViewData["CurrentFilter"]" /> &nbsp;
		<button type="submit" class="btn btn-primary" style="width:150px">
			Search
		</button>
		<a asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to Full List
		</a>
	</div>
</form>

<table class="table">
	<thead>
		<tr>
			<th>
				<a asp-action="Index" asp-route-sortOrder="@ViewData["FirstNameSort"]">@Html.DisplayNameFor(model => model.Jmeno)</a>
			</th>
			<th>
				<a asp-action="Index" asp-route-sortOrder="@ViewData["LastNameSort"]">@Html.DisplayNameFor(model => model.Prijmeni)</a>
			</th>
			<th>
				<a asp-action="Index" asp-route-sortOrder="@ViewData["DateSort"]">@Html.DisplayNameFor(model => model.Date)</a>
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Jmeno)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Prijmeni)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Date)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
